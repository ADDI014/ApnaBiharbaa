<% layout("layouts/boilerplate.ejs") %>
<body>

    <div class="container">
        <div class="row">
                <div class="card mb-4">
                    <img src="<%= festival.images[1].path %>" class="card-img-top "  alt="Second Image" style="height: 32rem; object-fit: cover;">
                </div>
        </div>
    </div>


    <div class="container mt-3">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center mb-4"><%= festival.name %></h1>
                
                <div class="card mb-3">
                    <div class="card-header bg-success-subtle">
                        <h2>Description</h2>
                    </div>
                    <div class="card-body">
                        <p><%= festival.description %></p>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-success-subtle">
                        <h2>History and Origin</h2>
                    </div>
                    <div class="card-body">
                        <p><%= festival.history %></p>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-success-subtle">
                        <h2>Significance</h2>
                    </div>
                    <div class="card-body">
                        <p>
                            <%= festival.significance %>
                        </p>
                    </div>
                </div>
                
                <div class="card mb-3">
                    <div class="card-header bg-success-subtle">
                        <h2>Date & Time</h2>
                    </div>
                    <div class="card-body">
                        <p><%= festival.date %></p>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-success-subtle">
                        <h2>Rituals</h2>
                    </div>
                    <div class="card-body">
                        <p><%= festival.rituals %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>






</body>
